{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "build",
            "type": "shell",
            "command": "odin build src -debug -error-pos-style:unix -strict-style -vet-unused",
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "presentation": {
                "showReuseMessage": false,
                "reveal": "always",
                "revealProblems": "onProblem",
                "echo": true,
                "focus": true,
                "panel": "shared",
                "clear": true,
            },
        }
    ]
}